<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Title="Управление МА">

    <FlyoutItem Title="Таблицы">
        <ShellContent
        Title="Имущество"
        Icon="box.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Кабинеты"
        Icon="home1.png"
        ContentTemplate="{DataTemplate local:Classrooms}"
        Route="Classrooms" />

        <!--<ShellContent Title="Сканирование"
                      Icon="scan.png"
                Route="CapmeraPage" 
              ContentTemplate="{DataTemplate local:CameraPage}" />-->
    </FlyoutItem>

    <ShellContent
    Title="Добавление"
    Icon="home.jpg"
    ContentTemplate="{DataTemplate local:AddPage}"
    Route="AddPage" />
    
</Shell>
