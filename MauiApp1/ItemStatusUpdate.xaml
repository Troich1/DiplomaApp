<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ItemStatusUpdate"
             Title="Обновление статуса МА">
    
    <VerticalStackLayout>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">

                <VerticalStackLayout x:Name="infoState">
                    <Label Text="Текущее состояние:" FontAttributes="Bold" />
                </VerticalStackLayout>

                <VerticalStackLayout x:Name="newInfoState">
                    <Label FontAttributes="Bold" />
                </VerticalStackLayout>

                <!-- Кнопка для отправки данных -->
                <Button Text="Обновить состояние" Clicked="OnAddToDatabaseClicked"/>

            </StackLayout>

        </ScrollView>
    </VerticalStackLayout>
</ContentPage>